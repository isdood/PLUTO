{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "GLIMMER Pattern Schema",
  "description": "Schema for GLIMMER patterns in the STARWEAVE framework",
  "type": "object",
  "required": ["metadata", "content"],
  "properties": {
    "metadata": {
      "type": "object",
      "properties": {
        "timestamp": {
          "type": "string",
          "format": "date-time"
        },
        "author": {
          "type": "string"
        },
        "pattern_version": {
          "type": "string",
          "pattern": "^\\d+\\.\\d+\\.\\d+$"
        },
        "color": {
          "type": "string",
          "pattern": "^#[0-9A-Fa-f]{6}$"
        },
        "type": {
          "type": "string",
          "enum": ["intent_crystallization", "quantum_processing", "meta_cognition", "pattern_weaving"]
        },
        "harmonics": {
          "type": "object",
          "patternProperties": {
            ".*": {
              "type": "object",
              "properties": {
                "color": {
                  "type": "string",
                  "pattern": "^#[0-9A-Fa-f]{6}$"
                },
                "description": {
                  "type": "string"
                }
              },
              "required": ["color", "description"]
            }
          },
          "additionalProperties": false
        }
      },
      "required": ["timestamp", "author", "pattern_version", "type"]
    },
    "content": {
      "type": "object",
      "properties": {
        "title": {
          "type": "string"
        },
        "sections": {
          "type": "array",
          "items": {
            "type": "object",
            "properties": {
              "title": {
                "type": "string"
              },
              "content": {
                "type": "object",
                "additionalProperties": {
                  "type": ["string", "array", "object"]
                }
              }
            },
            "required": ["title", "content"]
          }
        }
      },
      "required": ["sections"]
    }
  },
  "additionalProperties": false
}
